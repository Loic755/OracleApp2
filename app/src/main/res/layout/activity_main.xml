<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="exos.lujan.jose.joselujanexos.MainActivity">

    <com.androidplot.xy.XYPlot android:layout_height="400dp"
        android:layout_width="fill_parent"
        android:id="@+id/myXYPlot"
        androidPlot.legendWidget.heightMetric.value="100dp"
        androidPlot.legendWidget.widthMetric.value="100dp"
        androidPlot.titleWidget.labelPaint.textSize="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CPU and memory graphic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
